{
  "name": "Privatizer",
  "version": "1.0",
  "description": "Military grade encryption at your fingertip.",
  "browser_action": {
    "default_icon": "images/icon.png",
    "popup": "html/popup.html"
  },
  "permissions": [
    "<all_urls>"
  ],
  "options_page": "html/options_page.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
    	"js": [
        "javascript/thirdparty/encrypt.js", 
        "javascript/thirdparty/jquery-1.7.1.min.js", 
        "javascript/thirdparty/jquery.entwine-dist.js", 
        "javascript/privatizer.main.js"
      ],
      "css": [
        "html/style_inline.css"
      ]
    },
    {
      "matches": ["*://www.facebook.com/*"],
      "js": ["javascript/addons/facebook.js"]
    }
  ]
}
